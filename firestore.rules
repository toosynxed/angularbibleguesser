rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own data and other users' public profiles.
    // Anyone authenticated can create a user document for themselves.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // Lobbies can be read by anyone, which is needed for leaderboards and joining games.
    // Lobbies can be created by anyone.
    // Updates are restricted to prevent malicious data changes.
    match /lobbies/{lobbyId} {
      allow read, create: if request.auth != null;

      // Allow updates only for specific fields like 'guesses' or 'state'.
      // This prevents a user from changing the lobby owner or other critical data.
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['guesses', 'state', 'currentRound']);
    }

    // Players in a lobby can be read by anyone.
    // A player can only be added to a lobby (no updates/deletes by clients).
    // This prevents players from kicking others or changing scores.
    match /lobbies/{lobbyId}/players/{playerId} {
      allow read, create: if request.auth != null;
      allow update, delete: if false;
    }

    // Daily challenges can be read by anyone.
    match /daily_challenges/{date} {
      // Authenticated users can get a single challenge or a list of them (for the calendar).
      allow read: if request.auth != null;
      allow create, update, delete: if false; // Only backend/admins should create challenges
    }

    // Daily scores can be read by anyone (for leaderboards).
    // Users can only create their own score entry.
    // No one can update or delete scores to maintain leaderboard integrity.
    match /daily_scores/{date}/scores/{userId} {
       allow read: if true;
       // Allow score creation if the user is creating their own score entry.
       // This works for both anonymous and signed-in users via their UID.
       allow create: if request.auth != null && request.auth.uid == userId;
       allow update, delete: if false;
    }

    // Default deny all other access to prevent any open paths.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
